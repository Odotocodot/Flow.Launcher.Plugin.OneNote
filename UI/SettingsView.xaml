<UserControl
    x:Class="Flow.Launcher.Plugin.OneNote.UI.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Flow.Launcher.Plugin.OneNote"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:Flow.Launcher.Plugin.OneNote.UI"
    d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <!--<ui:XamlControlsResources />-->
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <Style x:Key="StackPanelStyle" TargetType="StackPanel">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Grid.Column" Value="0" />
            </Style>
            <Style x:Key="TitleStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,0,8,0" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style x:Key="HelperTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource Color04B}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Margin" Value="0,-4,0,0" />
                <Setter Property="Grid.ColumnSpan" Value="2" />
                <Setter Property="Padding" Value="0,0,0,0" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <!--<Setter Property="Visibility" Value="Collapsed" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}" Value="True">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>-->
            </Style>
            <Style x:Key="ToggleSwitchStyle" TargetType="ui:ToggleSwitch">
                <Setter Property="Grid.Column" Value="1" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="OffContent" Value="Off" />
                <Setter Property="OnContent" Value="On" />
            </Style>
            <GridLength x:Key="RowHeight">Auto</GridLength>
            <GridLength x:Key="HelperRowHeight">22</GridLength>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="60,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource RowHeight}" />
            <RowDefinition Height="{StaticResource HelperRowHeight}" />
            <RowDefinition Height="{StaticResource RowHeight}" />
            <RowDefinition Height="{StaticResource HelperRowHeight}" />
            <RowDefinition Height="{StaticResource RowHeight}" />
            <RowDefinition Height="{StaticResource HelperRowHeight}" />
            <RowDefinition Height="{StaticResource RowHeight}" />
            <RowDefinition Height="{StaticResource HelperRowHeight}" />
        </Grid.RowDefinitions>
        <!--#region row 0-->
        <StackPanel Grid.Row="0" Style="{DynamicResource StackPanelStyle}">
            <TextBlock Style="{DynamicResource TitleStyle}" Text="Show recycle bin" />
        </StackPanel>
        <ui:ToggleSwitch
            Grid.Row="0"
            IsOn="{Binding Settings.ShowRecycleBin}"
            Style="{DynamicResource ToggleSwitchStyle}" />
        <!--#endregion-->
        <!--#region row 1-->
        <TextBlock Grid.Row="1" Style="{DynamicResource HelperTextStyle}">
            <Run Text="When using &quot;" />
            <Run Text="{x:Static Member=local:Keywords.NotebookExplorer}" />
            <Run Text="&quot; show items that are in the recycle bin." />
        </TextBlock>
        <!--#endregion-->
        <!--#region row 2-->
        <StackPanel Grid.Row="2" Style="{DynamicResource StackPanelStyle}">
            <TextBlock Style="{DynamicResource TitleStyle}" Text="Show encrypted sections" />
        </StackPanel>
        <ui:ToggleSwitch
            Grid.Row="2"
            IsOn="{Binding Settings.ShowEncrypted}"
            Style="{DynamicResource ToggleSwitchStyle}" />
        <!--#endregion-->
        <!--#region row 3-->
        <TextBlock Grid.Row="3" Style="{DynamicResource HelperTextStyle}">
            <Run Text="When using &quot;" />
            <Run Text="{x:Static Member=local:Keywords.NotebookExplorer}" />
            <Run Text="&quot; show encrypted sections, if the section has been unlocked allow temporary access." />
        </TextBlock>
        <!--#endregion-->
        <!--#region row 4-->
        <StackPanel Grid.Row="4" Style="{DynamicResource StackPanelStyle}">
            <TextBlock Style="{DynamicResource TitleStyle}" Text="Display unread icon" />
        </StackPanel>
        <ui:ToggleSwitch
            Grid.Row="4"
            IsOn="{Binding Settings.ShowUnread}"
            Style="{DynamicResource ToggleSwitchStyle}" />
        <!--#endregion-->
        <!--#region row 5-->
        <TextBlock
            Grid.Row="5"
            Style="{DynamicResource HelperTextStyle}"
            Text="Displays a bullet point (&#x2022;) when a item has unread changes." />
        <!--#endregion-->
        <!--#region row 6-->
        <StackPanel Grid.Row="6" Style="{DynamicResource StackPanelStyle}">
            <TextBlock Style="{DynamicResource TitleStyle}" Text="Default number of recent pages" />
        </StackPanel>
        <ComboBox
            Grid.Row="6"
            Grid.Column="1"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            ItemsSource="{Binding DefaultRecentCountOptions}"
            SelectedItem="{Binding Settings.DefaultRecentsCount}" />
        <!--#endregion-->
        <!--#region row 7-->
        <TextBlock Grid.Row="7" Style="{DynamicResource HelperTextStyle}">
            <Run Text="The initial number of recent pages to show when using &quot;" />
            <Run Text="{x:Static Member=local:Keywords.RecentPages}" />
            <Run Text="&quot;." />
        </TextBlock>
        <!--#endregion-->
        <!--#region row 8-->
        <!-- <StackPanel Grid.Row="8" Style="{DynamicResource StackPanelStyle}">
            <TextBlock Style="{DynamicResource TitleStyle}" Text="Create colored icons for notebook and sections." />
        </StackPanel>
        <StackPanel
            Grid.Row="8"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <ui:ToggleSwitch Style="{DynamicResource ToggleSwitchStyle}" />
            <Button Margin="10,0,0,0">
                Delete Cached Images ..MB
            </Button>
        </StackPanel> -->
        <!--#endregion-->
    </Grid>
</UserControl>
